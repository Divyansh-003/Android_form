<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header"
        app:flow_horizontalAlign="center">
        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_free_breakfast_24"/>
        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/head"
            android:textSize="50dp"
            android:textAppearance="@color/material_on_surface_stroke"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:paddingRight="30dp"
            android:text="@string/name"/>
        <EditText
            android:id="@+id/nameBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"

            android:hint="Enter Name"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:paddingRight="30dp"
            android:text="@string/phone"/>
        <EditText
            android:id="@+id/phoneBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"

            android:hint="Enter phone no."
            android:inputType="phone" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:paddingRight="30dp"
        android:text="@string/product"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/productRadio">

        <RadioButton
            android:id="@+id/radioCappuccino"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="  Cappuccino"
            android:layout_marginTop="200dp"
            android:checked="false"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/Latte"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="   Latte"
            android:checked="false"

            android:textSize="20dp" />
        <RadioButton
            android:id="@+id/Espresso"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="   Espresso"
            android:checked="false"

            android:textSize="20dp" />
        <RadioButton
            android:id="@+id/Robusta"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="   Robusta"
            android:checked="false"

            android:textSize="20dp" />
        <RadioButton
            android:id="@+id/Decaf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="   Decaf"
            android:checked="false"

            android:textSize="20dp" />



    </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:paddingRight="30dp"
        android:text="@string/rating"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingRadio">

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="  ⭐"
            android:layout_marginTop="450dp"
            android:checked="false"
            android:textSize="20dp" />
        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="  ⭐⭐"
            android:checked="false"
            android:textSize="20dp" />
        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="  ⭐⭐⭐"
            android:checked="false"
            android:textSize="20dp" />
        <RadioButton
            android:id="@+id/radio4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="  ⭐⭐⭐⭐"
            android:checked="false"
            android:textSize="20dp" />
        <RadioButton
            android:id="@+id/radio5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="  ⭐⭐⭐⭐⭐"
            android:checked="false"
            android:textSize="20dp" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="700dp"
            android:layout_marginLeft="150dp"
            android:text="Submit"
            android:background="@color/purple_200"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>